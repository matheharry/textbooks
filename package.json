{
  "name": "@mathigon/textbooks",
  "version": "0.7.0",
  "description": "Mathigon Textbooks",
  "homepage": "https://mathigon.org/",
  "repository": "mathigon/textbooks",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "server": "mgon-serve",
    "assets": "mgon-build --assets --locales en",
    "watch": "mgon-build --assets --watch --locales en",
    "start": "npm-run-all --parallel watch server",
    "translate": "mgon-build --translate --key google-service-account.json",
    "lint": "eslint content --ext .ts",
    "lint-fix": "eslint content --ext .ts --fix"
  },
  "engines": {
    "node": "14.x"
  },
  "dependencies": {
    "@mathigon/boost": "0.6.16",
    "@mathigon/core": "0.6.7",
    "@mathigon/euclid": "0.6.10",
    "@mathigon/fermat": "0.6.4",
    "@mathigon/hilbert": "0.6.5",
    "@mathigon/studio": "0.1.10",
    "@types/d3": "6.3.0",
    "@types/three": "0.91.14",
    "@types/topojson": "3.2.3",
    "npm-run-all": "4.1.5",
    "ts-node": "10.0.0",
    "typescript": "4.3.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.26.1",
    "@typescript-eslint/parser": "4.26.1",
    "eslint": "7.27.0",
    "eslint-config-google": "0.14.0",
    "eslint-plugin-import": "2.23.4"
  }
}
